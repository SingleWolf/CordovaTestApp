<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="AlignTextView">
        <attr name="alignOnlyOneLine" format="boolean"/>
    </declare-styleable>

    <!-- Textview两端对齐的自定义属性-->
    <declare-styleable name="BothendsNeatTextview">
        <!-- 文本-->
        <attr name="text" format="string" />
        <!-- 后缀符号类型:全角、半角-->
        <attr name="suffixMode" format="enum">
            <enum name="full_width" value="1" />
            <enum name="half_width" value="2" />
        </attr>
    </declare-styleable>

</resources>
